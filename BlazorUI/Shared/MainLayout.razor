@inherits LayoutComponentBase

@using BlazorUI.Services

@inject UIService UIService

<div class="full-page-container" style="background-color:@((UIService.NightMode) ? "#404040;" : "white")">
    @Body
</div>
<div id="darkModeButton" @onclick="@(() => { UIService.ToggleNightMode(); })"></div>

@code {
    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
    }
}